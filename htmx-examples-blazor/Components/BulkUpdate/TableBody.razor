@using htmx_examples_blazor.Pages.BulkUpdate

@foreach (var c in Model)
{
    string statusValue = c.Status ? "Active" : "Inactive";
    string statusClass = c.Status ? "activate" : "deactivate";

    <tr class="@(c.Updated ? statusClass : "")">
        <td>
            <input id="@c.Id" type='checkbox' name='ids' value='@c.Id' unchecked>
            <input type="hidden" asp-for="@c.Id"/>
        </td>
        <td>@c.Name</td>
        <td>@c.Email</td>
        <td>@statusValue</td>
    </tr>
}

@code {
    [Parameter]
    public List<Contact> Model { get; set; } = [];
}